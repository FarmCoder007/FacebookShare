<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogNoBackground" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="MyBottomSheetDialog2" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="MyBottomSheetDialog3" parent="Theme.Design.Light.BottomSheetDialog">
        <!--        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>




    <style name="AppBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/fragment_dialog_bg</item>
    </style>



    <style name="RoundedBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/fragment_dialog_bg</item>
    </style>




    <style name="share_dialog_ll_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="layout_constraintTop_toBottomOf">@+id/bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="share_dialog_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/black_55</item>
    </style>
    <style name="share_dialog_iv_style">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>


    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>